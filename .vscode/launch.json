    "version": "0.2.0",
    "configurations": [
        {
            "name": "archivar watch",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/archivar/",
            "envFile": "${workspaceFolder}/.env",
            "args": ["-", "watch",
                 "--debug", 
                 "-i", "50",
                 "--config", "../../etc/archivar.yaml",
                ]
        },
        {
            "name": "gdrive",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/archivar/",
            "envFile": "${workspaceFolder}/.env",
            "args": ["-", "watch",
                 "--debug", 
                 "-i", "50",
                 "--config", "../../etc/gdrive.yaml",
                ]
        },
    ]
}